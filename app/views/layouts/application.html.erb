<!DOCTYPE html>
<html>
  <head>
    <title>Twitter Explorer</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
      <%= render 'layouts/header' %>

      <div class="container">
        <% if notice %><div id="flash">
            <p class="alert alert-success"><%= notice %></p></div>
        <% end %>
        <% if alert %><div id="flash">
              <p class="alert alert-danger"><%= alert %></p></div>
        <% end %>
        <%= yield %>
      </div>
    </body>
</html>
